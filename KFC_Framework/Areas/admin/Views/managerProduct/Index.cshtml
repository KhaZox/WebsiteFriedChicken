@section scripts{
    <script>
        const search = () => {
            var value = $("#inputSearch").val().toLowerCase();
            $(".table tbody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        }
        $("#inputSearch").on("keyup", search);
        $("#button-search").click(search);

        $(document).ready(() => {
            $('#productTable').DataTable({
                columnDefs: [{ orderable: false, targets: 3 }],
                "scrollY": "400px",
                "scrollCollapse": true,
                "paging": true,
                //select: true,
                processing: true,
                lengthMenu: [10, 25, 50, 100],
                responsive: true,
            })
        })

        $(document).ready(function () {
            $('#errorModal').modal('show');
        });

        function createNew() {
            window.location.href = '@Url.Action("Create")';
        }

        $(document).ready(function () {
            var buttonAddProduct = $('<button>', {
                id: 'buttonAddProduct',
                class: 'btn btn-primary text-light fw-bold me-3 ',
                text: 'Thêm Sản phẩm',
                click: createNew,
            });
            $('#productTable_filter').prepend(buttonAddProduct);
        });

    </script>
}

